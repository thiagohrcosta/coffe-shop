<div class="container">

  <div class="main-content">
  </div>
    <div class="coffe-content">
      <h1 class="title-coffe">Coffee menu</h1>
      <hr class="h-line">
      <div class="menu-grid">
        <% @menus.each do |menu| %>
          <div class="menu-box">
            <img class="img-menu" src="<%= menu.picture %>">
            <p class="menu-title"><%= link_to menu.name, menu_path(menu) %></p>
            <div class="">
              <p class="menu-price">$ <%= menu.price %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

</div>


<div class="mt-5">
  <footer class="footer">
    <p class="footer-text">Check this project on my
      <a href="https://github.com/thiagohrcosta/coffee-shop"><i class="fab fa-github"></i></a></p>
  </footer>
</div>
